<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalle.Detalle_Nota">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--DATOS DE LA NOTA-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!--Icono y TXT ID-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/id_nota_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Id_nota_Detalle_TXT"
                    android:text="@string/Id_nota_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato ID-->
            <TextView
                android:id="@+id/Id_nota_Detalle"
                android:text="@string/Id_nota_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


            <!--Icono y TXT Uid-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/uid_usuario_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Uid_usuario_Detalle_TXT"
                    android:text="@string/Uid_usuario_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Uid-->
            <TextView
                android:id="@+id/Uid_usuario_Detalle"
                android:text="@string/Uid_usuario_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


            <!--Icono y TXT Correo-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/correo_usuario_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Correo_Detalle_TXT"
                    android:text="@string/Correo_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Correo-->
            <TextView
                android:id="@+id/Correo_Detalle"
                android:text="@string/Correo_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


            <!--Icono y TXT Titulo-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/titulo_nota_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Titulo_Detalle_TXT"
                    android:text="@string/Titulo_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Titulo-->
            <TextView
                android:id="@+id/Titulo_Detalle"
                android:text="@string/Titulo_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <!--Icono y TXT Descripcion-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/descripcion_nota_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Descripcion_Detalle_TXT"
                    android:text="@string/Descripcion_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Descripcion-->
            <TextView
                android:id="@+id/Descripcion_Detalle"
                android:text="@string/Descripcion_Detalle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <!--Icono y TXT Fecha Registro-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fecha_registro_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Fecha_Registro_Detalle_TXT"
                    android:text="@string/Fecha_Registro_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Fecha Registro-->
            <TextView
                android:id="@+id/Fecha_Registro_Detalle"
                android:text="@string/Fecha_Registro_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <!--Icono y TXT Fecha Nota-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fecha_nota_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Fecha_Nota_Detalle_TXT"
                    android:text="@string/Fecha_Nota_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Fecha Nota-->
            <TextView
                android:id="@+id/Fecha_Nota_Detalle"
                android:text="@string/Fecha_Nota_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <!--Icono y TXT Estado-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <!--Icono-->
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/estado_detalle"/>

                <!--TXT-->
                <TextView
                    android:id="@+id/Estado_Detalle_TXT"
                    android:text="@string/Estado_Detalle_TXT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/worksans"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <!--Dato Estado-->
            <TextView
                android:id="@+id/Estado_Detalle"
                android:text="@string/Estado_Detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>





        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--Dato Importante-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#e65100">

            <Button
                android:id="@+id/Boton_Importante"
                android:text="@string/Boton_Importante"
                android:background="@android:color/transparent"
                android:fontFamily="@font/worksans"
                android:drawableTop="@drawable/icono_nota_no_importante"
                android:textColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>




</ScrollView>